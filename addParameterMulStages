pipeline {
agent any

parameters {
string(name: 'JENKINS', defaultValue: 'Execution', description: 'Stagewise execution is done')
}
environment {
USER_NAME = 'Harshith'
USER_ID =43
}
stages {
stage('Build') {
steps {
echo "First stage using param ${params.JENKINS}"
echo "Ok for 1st stage!!"
}
}
stage('Test') {
steps {
echo "user name is ${USER_NAME}"
echo "Ok for 2nd stage!!"
echo "job Name is ${JOB_NAME}"
}
}
stage('Deploy') {
steps {
echo "Third stage using param ${params.JENKINS}"
echo "user name is ${USER_NAME}"
echo "User id is ${USER_ID} (type: ${USER_ID}.class)"
echo "Ok for 3rd stage!!"
echo "build id is ${BUILD_ID}"
echo "build number is ${BUILD_NUMBER}"
echo "build url is ${BUILD_URL}"
}
}
}
}
